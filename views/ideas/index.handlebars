<h1>{{title}}</h1>
{{#each ideas}}
  <div class="card card-body mb-2">
    <h4>{{this.title}}</h4>
    <p>{{this.details}}</p>
    <a href="/ideas/edit/{{this.id}}" class="btn btn-dark btn-block mb-2">Edit</a>
    <form action="/ideas/delete/{{this.id}}?_method=DELETE" method="post">
      <input type="hidden" name="_method" value="DELETE">
      <button type="submit" class="btn btn-danger btn-block">Delete</button>
    </form>
  </div>
{{else}}
  <p>No video ideas listed!</p>
{{/each}}