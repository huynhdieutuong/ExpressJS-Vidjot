<h1>{{title}}</h1>

{{#if errors}}
  {{#each errors}}
    <div class="alert alert-danger">{{this}}</div>
  {{/each}}
{{/if}}

<div class="card card-body">
  <h3>Edit Video Idea</h3>
  <form action="/ideas/edit/{{idea.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" name="title" id="title" value={{#if values}}{{values.title}}{{else}}{{idea.title}}{{/if}}>
    </div>
    <div class="form-group">
      <label for="details">Details</label>
      <textarea class="form-control" name="details" id="details">{{#if values}}{{values.details}}{{else}}{{idea.details}}{{/if}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>